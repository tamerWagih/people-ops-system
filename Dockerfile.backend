FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY turbo.json ./

# Install dependencies (skip husky in Docker)
RUN npm ci --ignore-scripts

# Copy source code
COPY . .

# Build only the backend using turbo
RUN npx turbo run build --filter=backend

# Expose port
EXPOSE 4000

# Start the application
CMD ["npm", "run", "start:prod", "--workspace=backend"]
