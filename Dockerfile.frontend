FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY turbo.json ./

# Install dependencies (skip husky in Docker)
RUN npm ci --ignore-scripts

# Copy source code
COPY . .

# Build only the frontend
RUN npm run build --workspace=frontend

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "run", "start", "--workspace=frontend"]
