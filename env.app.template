# People Operations & Workforce Management System - App Server Environment
# Copy this file to .env.app and update the values for your VM

# Application Settings
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Database Configuration (VM 2 - Database Server)
DATABASE_URL=postgresql://people_ops:${POSTGRES_PASSWORD}@DB_VM_IP:5432/people_ops_dev
POSTGRES_DB=people_ops_dev
POSTGRES_USER=people_ops
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_HOST=DB_VM_IP
POSTGRES_PORT=5432

# Redis Configuration (VM 2 - Database Server)
REDIS_URL=redis://DB_VM_IP:6379
REDIS_HOST=DB_VM_IP
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# MinIO Configuration (VM 2 - Database Server)
MINIO_ENDPOINT=DB_VM_IP
MINIO_PORT=9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_BUCKET_NAME=people-ops-dev-documents
MINIO_USE_SSL=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://APP_VM_IP:4000
NEXT_PUBLIC_APP_NAME=People Operation and Management
NEXT_PUBLIC_APP_VERSION=1.0.0

# CORS Configuration
CORS_ORIGIN=http://APP_VM_IP:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
DEBUG=false